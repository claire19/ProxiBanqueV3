package com.proxibanque3.controller;

import java.io.Serializable;
import java.util.ArrayList;
import java.util.Collection;
import java.util.HashMap;
import java.util.Iterator;
import java.util.List;
import java.util.Map;

import javax.faces.bean.SessionScoped;
import javax.faces.model.SelectItem;
import javax.inject.Inject;
import javax.inject.Named;

import com.proxibanque3.model.Compte;
import com.proxibanque3.service.Service;

@Named
@SessionScoped
public class CompteController implements Serializable {

	private long numeroCompte;
	private Map<Long, Compte> comptes = new HashMap<>();

	@Inject
	Service service;

	public List<SelectItem> returnAllComptes() {
		Iterator<Compte> comptes = service.listerComptes().values().iterator();

		List<SelectItem> allComptes = new ArrayList<SelectItem>();
		while (comptes.hasNext()){
			Compte c = comptes.next();
			allComptes.add(c.getNumeroCompte(), c);
			
		}

}

<h:form><h:

selectOneMenu value = "#{languageController.language}"onchange="this.form.submit()"valueChangeListener="#{languageController.processMyChange}"><f:
selectItems value="#{languageController.locales}" />
</h:selectOneMenu>
</h:form>